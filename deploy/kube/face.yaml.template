apiVersion: extensions/v1beta1
kind: Deployment
metadata:
  name: face
  labels:
    name: face
spec:
  replicas: 1
  progressDeadlineSeconds: 600
  minReadySeconds: 15
  revisionHistoryLimit: 5
  template:
    metadata:
      labels:
        name: face
        role: cpuworker
    spec:
      containers:
      - image: akshayubhat/dva-auto:latest
        imagePullPolicy: "IfNotPresent"
        resources:
          requests:
            memory: "2000Mi"
            cpu: "2"
          limits:
            memory: "4000Mi"
            cpu: "4"
        name: face
        env:
        - name: LAUNCH_BY_NAME_detector_face
          value: "1"
{common}
        args:
          - bash
          - -c
          - {command}